#include <string>

enum mode { OFF, LEFT, RIGHT, SWITCH, FLASH };

class Dacta {

	private:
		int port;
		unsigned int inputs[8];

	public:
		Dacta() {
			port = -1;
		}

		bool setPort(int port) {
			if (port < 0)
				return false;
			this->port = port;
			return true;
		}

		bool init() {
			write(port, "q\0", 2);
			write(port, "###Do you byte, when I knock?$$$", 32);
			char buff[32];
			read(port, buff, 32);
		}

		unsigned int getInput(int id) {
			return inputs[id - 1];
		}

		void setOutput(int id, mode mode) {
			switch (mode) {


			}
		}
};
